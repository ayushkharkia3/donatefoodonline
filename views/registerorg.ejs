<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Donate Food | Give From The Heart</title>
    <link rel="icon" href="/img/logo.jpeg">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/stylea.css">
</head>

<body>
    <div class="navigation">
        <input type="checkbox" class="navigation__checkbox" id="navi-toggle">

        <label for="navi-toggle" class="navigation__button">
                <span class="navigation__icon">&nbsp;</span>
            </label>

        <div class="navigation__background">&nbsp;</div>

        <nav class="navigation__nav">
            <ul class="navigation__list">
                <li class="navigation__item"><a href="/" class="navigation__link"><span>01</span>Home</a></li>
                <li class="navigation__item"><a href="/org/login" class="navigation__link"><span>02</span>Login as an admin</a></li>
            </ul>
        </nav>
    </div>
    <section class="section-book">
        <div class="container">
            <div class="row">
                <div class="book">
                    <div class="book__form">
                        <form action="/org/register" method="POST" class="form">
                            <div class="u-margin-bottom-medium">
                                <h2 class="heading-secondary">
                                    Register your organization here
                                </h2>
                            </div>
                            <%- include('./partials/messages.ejs') %>
                                <div class="form__group"> <input type="text" value="<%= typeof organizationName != 'undefined' ? organizationName : '' %>" name="organizationName" class="form__input" id="name" placeholder="Orginisation name" required> <label for="name" class="form__label">Organisation name</label>                                    </div>
                                <div class="form__group"> <input type="email" value="<%= typeof organizationEmail != 'undefined' ? organizationEmail : '' %>" name="organizationEmail" id="email" class="form__input" placeholder="Email Address" required> <label for="email" class="form__label select ">Email address</label>                                    </div>
                                <div class="form__group"> <input type="tel" name="organizationContact" pattern="[0-9]{10}" id="contact" value="<%= typeof organizationContact != 'undefined' ? organizationContact : '' %>" class="form__input" placeholder="Contact number" required>                                    <label for="contact" class="form__label select ">Contact number</label> </div>
                                <div class="form__group"> <input type="text" name="organizationAddress" class="form__input" value="<%= typeof organizationAddress != 'undefined' ? organizationAddress : '' %>" id="name" placeholder="Orginisation address" required> <label for="name"
                                        class="form__label">Organisation address</label> </div>
                                <div class="form__group"> <input type="number" pattern="[0-9]{6}" class="form__input" id="pincode" value="<%= typeof organizationPincode != 'undefined' ? organizationPincode : '' %>" name="organizationPincode" placeholder="Organization pincode"
                                        required><label for="organizationPincode" class="form__label">Organisation pincode</label> </div>
                                <div class="form__group"> <input type="password" class="form__input" id="password" name="password" placeholder="Set password" minlength="6" required><label for="password" class="form__label">Set Password</label> </div>
                                <div class="form__group"> <input type="password" class="form__input" id="password" name="password2" placeholder="Verify your password" minlength="6" required><label for="password2" class="form__label">Verify your Password</label> </div>
                                <div class="form__group ">
                                    <button type="submit " class="btn btn--green">Register</button> </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>